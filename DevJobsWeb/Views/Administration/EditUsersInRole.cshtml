@model List<Entities.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}    
<form method="post" class="mt-3">

    <div class="card">
        <div class="card-header">
            <h3>Add or remove this user</h3>
        </div>  
        
        <div class="card-body">
                @for(int i = 0; i < Model.Count; i++)
                {
                    <div>
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                @Model[i].UserName
                        </label>
                        <input hidden asp-for="@Model[i].UserName">
                        <input hidden asp-for="@Model[i].UserId">
                    </div>
                }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" style="width:auto"/>
            
            <a asp-action="EditRole" asp-controller="Administration"  
               asp-route-roleId="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
                                                                                                             