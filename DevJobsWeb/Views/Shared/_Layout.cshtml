@using Microsoft.AspNetCore.Identity
@using DevJobsWeb.Areas.Identity.Data

@inject SignInManager<DevJobsWebUser> SignInManager
@inject UserManager<DevJobsWebUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevJobsWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevJobsWeb.styles.css" asp-append-version="true" />  
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.13.2/datatables.min.css"/>
</head>
<body class="bg-light rounded">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DevJobsWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Applicant" asp-action="Index">Applicants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Application" asp-action="Index">Applications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Job" asp-action="Index">Jobs</a>
                        </li>
                         @if(SignInManager.IsSignedIn(User) && User.IsInRole("NormalUse"))
                         {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="navDropDownMenueLink"
                                aria-haspopup="false" aria-expand >Manage</a>
                                <div class="dropdown-menu" aria-labelledby="navDropDownMenueLink">
                                    <a asp-action="ListUsers" asp-controller="Administration" class="dropdown-item">Users </a>
                                    <a asp-action="Index" asp-controller="Administration" class="dropdown-item">Roles </a>
                                    <a asp-action="Create" asp-controller="Job" class="dropdown-item">Create Jobs </a>
                                </div>
                            </li>
                         }         
                    </ul>                          
                   
                    @*<ul class="navbar-nav m-lg-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                               <form asp-action="Logout" asp-controller="Account" method="post">
                                  <button type="submit" class="nav-link btn btn link py-0" style="width:auto">
                                      Logout   @User.Identity.Name
                                  </button>
                               </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }

                       
                    </ul>*@

                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container bg-light">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - DevJobsWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.13.2/datatables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)   
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>
